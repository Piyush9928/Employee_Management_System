            </DialogHeader>
            <form onSubmit={handleSubmit} className="space-y-4" data-testid="attendance-form">
              <div className="space-y-2">
                <Label htmlFor="employee_id">Employee *</Label>
                <select
                  id="employee_id"
                  name="employee_id"
                  value={formData.employee_id}
                  onChange={handleChange}
